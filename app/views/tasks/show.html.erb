<div class="container mt-5">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h1> <%= @task.title  %></h1>
      <p> <%= @task.details %></p>
      <p><%= @task.completed ? "Completed": "Not yet completed" %></p>
      <%=link_to("Back to list", tasks_path, class:"card-link")%>
      <%=link_to("Edit", edit_task_path, class:"card-link")%>
    </div>
  </div>
</div>
