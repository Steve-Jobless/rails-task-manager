<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
      <%= f.text_field :title, class:"form-control mb-3"%>
  </div>
  <div class="form-group">
    <%= f.label :details %>
      <%= f.text_field :details, class: "form-control mb-3" %>
  </div>
  <div>
    <%= f.check_box :completed %>
      <%= f.label :completed %>
  </div>
  <%= f.submit class:"btn btn-primary mt-3"%>


    <% end %>
