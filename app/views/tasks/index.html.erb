<div class="container mt-5">
  <h1>My tasks</h1>
  <div>
    <% @tasks.each do |task| %>
    <ul>
    <div>
      <li><% if task.completed?  %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>

      <%= link_to task.title, task_path(task) %> <%= link_to '', task_path(task), method: :delete, data: { confirm: 'Are you sure?'}, class: "fas fa-trash-alt" %>
</li>


    </div>
    </ul>
    <% end %>
  </div>
<%= link_to("Add a new task", new_task_path)  %>
</div>
